@import nib
body,div,ul,li,pre
    margin: 0
    padding: 0
    font-family: "Helvetica Neue", sans-serif

li
    list-style-type: none

.header
    background-color: black
    background-image: url(img/header.jpg)
    background-position top center
    height: 452px
    color: #fff
    position: relative
    .logo
        margin: 0 auto
        display: block
        padding-top: 57px
    h1.title
        background-image: url(img/brand.png)
        background-position: center center
        background-repeat: no-repeat
        font-weight: normal
        text-indent: -2000px
        margin-bottom: 40px
    p.describe
        text-align: center
        font-size: 24px
        margin-bottom: 23px
        width: 720px
        margin: 0 auto 23px auto
    ul.funcs
        text-align: center
        width: 200px
        margin: 0 auto
        .item
            display: inline-block
            margin-right: 20px
    .button-wrap
        width: 100%
        position: absolute
        bottom: -30px
    .button
        background-image: url("img/button.png")
        width: 240px
        height: 61px
        margin: 0 auto
        display: block
        color: #fff
        padding-left: 50px
        box-sizing: border-box
        line-height: 61px
        text-decoration: none
        font-size: 24px
        text-shadow: 0 1px 2px rgba(0,0,0,0.2)

.body
    background-image: url(img/noise.png)
    padding-top: 50px
    .selects
        clearfix()
        width: 1050px
        margin: 0 auto
        .item
            opacity: 0.7
            background-image: url(img/node-webkit.png)
            background-repeat: no-repeat
            background-position: center center
            height: 130px
            width: 250px
            margin-right: 150px
            float: left
        .active
            opacity: 1
            background-color: #eee
            position: relative
            &:after
                background-image: url(img/arrow.png)
                background-repeat: no-repeat
                background-position: bottom center
                bottom: 0
                width: 100%
                height: 10px
                content: ""
                display: block
                position: absolute
        .last
            margin-right: 0
    .panel
        background-color: #222
        .container
            clearfix()
            width: 1050px
            margin: 0 auto
            padding: 20px 0
            .code-block
                padding-right: 20px
                float: left
                border-right: 1px solid #121212
                pre
                    width: 500px
            .features
                float: left
                width: 340px
                padding-left: 20px
                border-left: 1px solid #2a2a2a
                .title
                    font-size: 18px
                    color: #d6d6d6
                ul
                    color: #7d7d7d
                    li
                        background-image: url(img/check.png)
                        background-repeat: no-repeat
                        line-height: 1.5
                        margin-bottom: 50px
                        padding-left: 40px


.footer
    background-image: url(img/header.jpg)
    .links
        padding: 40px
        text-align: right
        a
            margin-right: 15px
            color: #bcbcbc
            text-decoration: none